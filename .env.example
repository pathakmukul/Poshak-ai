# Frontend Environment Variables
# Copy this to .env and fill with your values
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Backend Environment Variables
# Copy these to backend/.env

# Google APIs
GOOGLE_API_KEY=your_gemini_api_key
GEMINI_API_KEY=your_gemini_api_key
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Firebase
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# QLOO API
QLOO_API_KEY=your_qloo_api_key

# Serper API (for shopping recommendations)
SERPER_API_KEY=your_serper_api_key

# OpenAI (optional, for virtual try-on)
OPENAI_API_KEY=your_openai_api_key

# Vertex AI
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Model Settings
USE_HF_API=true  # Set to true for Firebase deployment
HUGGINGFACE_API_TOKEN=your_hf_token  # Optional
